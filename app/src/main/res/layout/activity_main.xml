<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    untuk view sudah rapi, bahkan sudah pakai tablelayout dan cardview
        mungkin tambahan, pastikan kalau untuk ukuran text, pakai SP bukan DP
                        -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:rotation="-21"
            android:text="Kertas"
            android:textColor="#FF9800"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="-15dp"
            android:gravity="center"
            android:rotation="-21"
            android:text="Gunting"
            android:textColor="#4CAF50"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:rotation="-21"
            android:text="Batu"
            android:textColor="#673AB7"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TableRow android:layout_height="317dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Pemain 1"
                    android:textColor="#17CAE1"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/batu1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="3dip"
                        android:src="@drawable/batu"
                        tools:layout_editor_absoluteY="118dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/gunting1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:src="@drawable/gunting"
                        tools:layout_editor_absoluteY="118dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/kertas1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:src="@drawable/kertas"
                        tools:layout_editor_absoluteY="118dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hasil"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:rotation="-29"
                    android:rotationX="4"
                    android:text="VS"
                    android:textColor="#F62415"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="COM"
                    android:textColor="#17CAE1"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/batu2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:src="@drawable/batu"
                        tools:layout_editor_absoluteY="118dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/gunting2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:src="@drawable/gunting"
                        tools:layout_editor_absoluteY="118dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/kertas2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:src="@drawable/kertas"
                        tools:layout_editor_absoluteY="118dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:padding="3dip"
        android:src="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>